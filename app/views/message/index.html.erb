<%= form_with(url: "/message/new", local: true) do |form| %>
  <%= form.label :name, "Имя" %>
  <%= form.text_field :name %>
  
  <%= form.label :email, "Электронная почта" %>
  <%= form.email_field :email %>
  
  <%= form.label :text, "Текст сообщения" %>
  <%= form.text_area :text %>
  
  <%= form.submit value: "Отправить" %>
<% end %>
